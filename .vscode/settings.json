{
  // ESLint extension
  "eslint.autoFixOnSave": true,
  "eslint.enable": true,
  "eslint.run": "onType",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    { "autoFix": true, "language": "javascript" },
    { "autoFix": true, "language": "javascriptreact" }
  ],

  // Stylelint
  // Prevent both the editorâ€™s stylesheet built-in linters and Stylelint
  // from reporting essentially the same errors.
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  // File associations to languages
  "files.associations": {
    ".babelrc": "json",
    ".huskyrc": "json",
    ".lintstagedrc": "json",
    ".stylelintrc": "json"
  },

  // Use ESLint for JavaScript and TypeScript linting rather than
  // the built-in validators.
  "javascript.validate.enable": false,
  "typescript.validate.enable": false
}
